# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=voice_admin
POSTGRES_PASSWORD=CAMBIAR_ESTE_PASSWORD_AHORA_123456
POSTGRES_DB=voice_orchestrator
POSTGRES_SERVER=db
POSTGRES_PORT=5432

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=tu_api_key_super_secreta_aqui

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Azure Cognitive Services (STT/TTS)
AZURE_SPEECH_KEY=tu_azure_key_aqui
AZURE_SPEECH_REGION=eastus

# Groq (LLM)
GROQ_API_KEY=gsk_tu_groq_key_aqui

# Azure OpenAI (Optional - LLM alternativo)
AZURE_OPENAI_KEY=tu_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://tu-recurso.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# TELEPHONY PROVIDERS
# =============================================================================
# Telnyx (Primary)
TELNYX_API_KEY=tu_telnyx_key_aqui
TELNYX_CONNECTION_ID=tu_connection_id
TELNYX_PUBLIC_KEY=tu_public_key_para_webhooks

# Twilio (Legacy - Optional)
# TWILIO_ACCOUNT_SID=tu_account_sid
# TWILIO_AUTH_TOKEN=tu_auth_token

# =============================================================================
# REDIS (Caching & Session)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# CORS (Agregar tus dominios de producción)
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# =============================================================================
# OPTIONAL - INTEGRATIONS
